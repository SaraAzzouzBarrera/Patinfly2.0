<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.scooter.ScooterDetailActivity">

    <LinearLayout
        android:layout_width="244dp"
        android:layout_height="441dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/uuid"
            android:layout_width="269dp"
            android:layout_height="46dp"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/ScooterName"
            android:layout_width="269dp"
            android:layout_height="46dp"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/longScooter"
            android:layout_width="269dp"
            android:layout_height="46dp"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/latScooter"
            android:layout_width="269dp"
            android:layout_height="46dp"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/batteryLevel"
            android:layout_width="269dp"
            android:layout_height="46dp"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/mTravel"
            android:layout_width="269dp"
            android:layout_height="46dp"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:visibility="visible" />


        <TextView
            android:id="@+id/InitialData"
            android:layout_width="269dp"
            android:layout_height="46dp"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/LastData"
            android:layout_width="269dp"
            android:layout_height="46dp"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/state"
            android:layout_width="269dp"
            android:layout_height="46dp"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:visibility="visible" />


    </LinearLayout>

    <Button
        android:id="@+id/Ok"
        android:layout_width="298dp"
        android:layout_height="57dp"
        android:text="Sign Up"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="740dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
